@model TheatreCMS3.Areas.Rent.Models.Rental

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string rentaltype = (string)ViewData["rentaltype"];
    
}

<h2>Details</h2>
<br />

<div>
    <h4>Rental</h4>
    <hr class="rental-index--hrforheadings">
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.RentalName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.RentalName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.RentalCost)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.RentalCost)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.FlawsAndDamages)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FlawsAndDamages)
        </dd>

        @*If user selects a Rental Equipment item, the appropriate action will be called and
        rentalequipment string will be passed into the view, triggering the display of the below additional fields*@
        @if (rentaltype == "rentalequipment")
        {
            if (Model.ChokingHazard == true)
            {
                <dt>
                    @Html.DisplayNameFor(model => model.ChokingHazard)
                </dt>
                <dd>True</dd>
            }
            if (Model.ChokingHazard == false)
            {
                <dt>
                    @Html.DisplayNameFor(model => model.ChokingHazard)
                </dt>
                <dd>False</dd>
            }

            <dt>
                @Html.DisplayNameFor(model => model.PurchasePrice)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.PurchasePrice)
            </dd>

            if (Model.SuffocationHazard == true)
            {
                <dt>
                    @Html.DisplayNameFor(model => model.SuffocationHazard)
                </dt>
                <dd>True</dd>
            }
            if (Model.SuffocationHazard == false)
            {
                <dt>
                    @Html.DisplayNameFor(model => model.SuffocationHazard)
                </dt>
                <dd>False</dd>
            }


        }


        @*If user selects a Rental Room item, the appropriate action will be called and
        rentalroom string will be passed into the view, triggering the display of the below additional fields*@
        @if (rentaltype == "rentalroom")
        {
            <dt>
                @Html.DisplayNameFor(model => model.RoomNumber)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.RoomNumber)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.MaxOccupancy)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.MaxOccupancy)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.SquareFootage)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.SquareFootage)
            </dd>
        }
    </dl>
</div>
<p>
    
    @Html.ActionLink("Edit", "Edit", new { id = Model.RentalId }, new { @class = "btn btn-dark" }) 
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-dark" })
</p>